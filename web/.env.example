# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://techulus:password@localhost:5432/techulus

# Authentication
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-secret-key-here

# Encryption (32 bytes as 64-character hex string)
ENCRYPTION_KEY=your-64-character-hex-string

# Public URL
APP_URL=https://your-domain.com

# Logging (optional)
VICTORIA_LOGS_URL=http://username:password@victoria-logs:9428
VICTORIA_LOGS_PRIVATE_URL=http://username:password@victoria-logs:9428

# Docker Registry for builds (optional)
REGISTRY_HOST=registry.example.com

# Inngest (required for production)
INNGEST_BASE_URL=http://inngest:8288
INNGEST_SIGNING_KEY=signkey-xxx
INNGEST_EVENT_KEY=xxx

# GitHub App Integration (optional)
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=base64-encoded-private-key
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Backup Storage (S3-compatible, optional)
BACKUP_STORAGE_PROVIDER=s3
BACKUP_STORAGE_BUCKET=my-backup-bucket
BACKUP_STORAGE_REGION=us-east-1
BACKUP_STORAGE_ENDPOINT=
BACKUP_STORAGE_ACCESS_KEY=
BACKUP_STORAGE_SECRET_KEY=
BACKUP_STORAGE_RETENTION_DAYS=7

# SMTP Configuration (optional)
SMTP_ENABLED=true
SMTP_FROM_NAME=Techulus Cloud
SMTP_FROM_ADDRESS=noreply@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=smtp-user
SMTP_PASSWORD=secret
SMTP_ENCRYPTION=starttls
SMTP_TIMEOUT=10000
SMTP_ALERT_EMAILS=alerts@example.com,admin@example.com